<style>
	.about-company-section .container-fluid {
		display: flex;
		right: auto;
		margin-left: auto;
		position: relative;
	}
	/* LEFT */
	.has-background-yes::before {
		content: "";
		width: 61px;
		height: 61px;
		background-color: #f2ede9;
		position: absolute;
		top: 0;
		left: 0;
		border-radius: 50%;
		transform: scale(1);
		transform-origin: right center;
		transition: transform 0.5s ease;
	}
	/*  */
	.about-section-column {
		position: relative;
		min-height: 1px;
		display: flex;
	}
	.about-section-column .section-wrap {
		padding: 120px 15px 360px;
		display: flex;
		position: relative;
		width: 100%;
		flex-wrap: wrap;
		align-content: flex-start;
	}
	/*  */
	.about-section-column .section-wrap .items-1,
	.about-section-column .section-wrap .items-2,
	.about-section-column .section-wrap .items-3,
	.about-section-column .section-wrap .items-4,
	.about-section-column .section-wrap .items-5 {
		margin-bottom: 20px;
		width: 100%;
		position: relative;
	}
	.about-section-column .section-wrap .items-1 .wrapper {
		transition: background 0.3s, border 0.3s, border-radius 0.3s, box-shadow 0.3s, transform 0.4s;
		text-align: left;
	}
	.about-section-column .section-wrap .items-1 .wrapper p {
		text-transform: uppercase;
		font-size: 14px;
		font-weight: 500;
		margin: 0;
		line-height: 1.1;
		letter-spacing: 0.2em;
		position: relative;
		top: -1px;
		color: theme(colors.custom-orange);
	}
	.about-section-column .section-wrap .items-1 .wrapper p::before {
		margin-right: 6px;
	}
	.about-section-column .section-wrap .items-1 .wrapper p::after {
		margin-left: 6px;
	}
	.about-section-column .section-wrap .items-1 .wrapper p::before,
	.about-section-column .section-wrap .items-1 .wrapper p::after {
		position: relative;
		top: -1px;
		content: "||";
		font-size: 10px;
	}
	.about-section-column .section-wrap .items-1 .wrapper h2 {
		margin: 0;
		margin: 0 0 30px;
		font-weight: 700;
		font-size: 35px;
		line-height: 1.2em;
		position: relative;
		bottom: -10px;
		color: theme(colors.custom-dark-primary);
	}
	/*  */
	.about-section-column .section-wrap .items-2 .wrapper {
		margin: 0 0 10px;
		transition: background 0.3s, border 0.3s, border-radius 0.3s, box-shadow 0.3s, transform 0.4s;
	}
	.about-section-column .section-wrap .items-2 .wrapper .row > * {
